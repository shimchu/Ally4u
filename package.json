{
  "name": "ally4u",
  "displayName": "Ally4u",
  "description": "accessibility copilot",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ally4u.accessibilityCopilot",
        "title": "Accessibility Copilot",
        "icon": "$(comment)" 
      }
    ],
    "menus": {
    "editor/title": [
      {
        "command": "ally4u.accessibilityCopilot",
        "group": "navigation"
      }
    ]
  },
  "chatParticipants": [
    {
      "id": "chat-ally4u.accessibility-agent",
      "fullName": "Accessibility Agent",
      "name": "ally4u",
      "description": "How can I help make your code more accessible?",
      "isSticky": true,
      "commands": [
        {
          "name": "ask",
          "description": "How can I help make your code more accessible?"
        }
      ]
    }
  ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
